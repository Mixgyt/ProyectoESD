          <div class="calendario-container" style="margin-bottom: 40px;">

            <div class="formulario-fechas">
              <label for="check_in">Fecha de entrada:</label>
              <input type="date" id="check_in" name="check_in" class="form-control">
              <label for="check_out">Fecha de salida:</label>
              <input type="date" id="check_out" name="check_out" class="form-control">
            </div>
            <!-- Botón para continuar -->
            <input type="submit" value="Continuar con la reserva" class="btn-reserva"/>

          </div>
        </form>
      }
