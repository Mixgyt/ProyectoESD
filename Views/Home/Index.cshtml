}

<!-- ***** CABEZERA PARTE SLIDE IMAGENES DE FONDO DE LAS HAITACIONES***** -->

<div class="main-banner">
    <div class="item">
        <img src="assets/images/banner-01.jpg" alt="Banner de Reservación">
        <div class="header-text">
          @if(usuario!=null){
          <a href="#reservaB">
            <span class="category">Crea tu<em> Reservación</em></span>
