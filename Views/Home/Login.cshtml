@model Usuario;

@{
    ViewData["Title"] = "Login ";
    String error = ViewBag.Error;
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>InicioSesion</title>

    <!-- Main css -->
    <link rel="stylesheet" href="~/css/Login&Registro.css">
    <link rel="stylesheet" href="~/css/sb-admin-2.min.css">
    <link rel="stylesheet" href="~/css/Password.css">
</head>
<body>

    <div class="main">
        <div>
            <a style="margin: 30px" asp-action="Index">Regresar</a>
        </div>
        <!-- Sing in  Form -->
        <section class="signup">
            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="~/img/signup-image.jpg" alt="sing up image"></figure>
                        <a class="signup-image-link" asp-area="" asp-controller="Home" asp-action="Registro">Registro </a>
                    </div>
                    <div class="signin-form">
                        <h2 class="form-title">Login</h2>
                        @if (!String.IsNullOrEmpty(error))
                        {
                            <div class="card mb-4 py-3 border-bottom-danger">
                                <div class="card-body">
                                    @(error)
                                </div>
                            </div>
                        }
                        <form asp-action="Login">
                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="Nombre" placeholder="Ingrese su usuario" />
                            </div>
                            <div class="form-group">
                                <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                <div class="password-wrapper">
                                    <script src="~/js/password.js"></script>
                                    <input asp-for="Clave" id="password-field" class="zmdi zmdi-account material-icons-name" type="password" placeholder="Contraseña"/>
                                    <div class="toggle-button">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="eye-icon">
                                            <path d="M12 15a3 3 0 100-6 3 3 0 000 6z"/>
                                            <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 010-1.113zM17.25 12a5.25 5.25 0 11-10.5 0 5.25 5.25 0 0110.5 0z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group form-button">
                                <input type="submit" class="form-submit" value="Iniciar Sesion" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

    </div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
