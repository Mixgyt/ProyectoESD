@model Usuario;

@{
    ViewData["Title"] = "Login ";
    String error = ViewBag.Error;
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>InicioSesion</title>

    <!-- Main css -->
    <link rel="stylesheet" href="~/css/Login&Registro.css">
    <link rel="stylesheet" href="~/css/sb-admin-2.min.css">
</head>
<body>

    <div class="main">
        <div>
            <a style="margin: 30px" asp-action="Index">Regresar</a>
        </div>
        <!-- Sing in  Form -->
        <section class="signup">
            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="~/img/signup-image.jpg" alt="sing up image"></figure>
                        <a class="signup-image-link" asp-area="" asp-controller="Home" asp-action="Registro">Registro </a>
                    </div>
                    <div class="signin-form">
                        <h2 class="form-title">Login</h2>
                        @if (!String.IsNullOrEmpty(error))
                        {
                            <div class="card mb-4 py-3 border-bottom-danger">
                                <div class="card-body">
                                    @(error)
                                </div>
                            </div>
                        }
                        <form asp-action="Login">
                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="Nombre" placeholder="Ingrese su usuario" />
                            </div>
                            <div class="form-group">
                                <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" asp-for="Clave" placeholder="Ingrese su contraseña" />
                            </div>

                            <div class="form-group form-button">
                                <input type="submit" class="form-submit" value="Iniciar Sesion" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

    </div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
